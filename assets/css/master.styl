@import '_settings'

normalize-css()
base()

body, html
  height: 100%
  width: 100%
  position: relative
  display:table

body
  margin: 0
  font-family: 'Helvetica, Arial, sans-serif'
  font-size: 12px
  background: url(../img/background.jpg) no-repeat left top scroll
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  text-align: center

#mailchimp-form
  background: transparent
p
  margin: 0px
  font-weight: normal
  line-height: 20px

a
  color: black
  font-weight: bold
  text-decoration: none

a:hover
  text-decoration: underline

h3
  font-weight: bold
  font-size: 18px
  text-transform: capitalize
  line-height: 20px
  margin: 6px 0

hr
  background: #999
  height: 1px
  margin: 20px 0
  border: none
  clear: both

#wrapper
  width: 100%
  height: 100%
  margin: 0

#logo-date
  width: 100%
  max-width: 649px
  padding-top: 4%
  margin: 0 auto

#footer
  bottom: 0px
  width: 100%
  padding: 20px 0

.container
  background-color: rgba(255,255,255,.65)
  margin: 20px auto
  padding: 16px
  width: 230px
  border-radius: 10px

.description
  text-transform: capitalize
  padding: 10px 0

.shop-info
  float: left
  display: block
  clear: both
  width: 100%
